<div class="container">
  <div class="row mt-5">
    <div class="col-lg-4">
      <h5>メニュー</h5>
      <h6>収支</h6>
      <li><%= link_to "収支一覧", balances_path %></li>
      <li><%= link_to "支出",expense_path %></li>
      <li><%= link_to "収入",income_path %></li>
      <h6>ブログ</h6>
      <li><%= link_to "ブログ一覧", search_blogs_path %></li>
      <li><%= link_to "ブログ新規投稿", new_blog_path %></li>
      <h6>データ</h6>
      <li><%= link_to "年間収支", yearbalance_path %></li>
      <li><%= link_to "年間項目割合", yeargenre_path %></li>
      <li><%= link_to "貯蓄推移", totalsaving_path %></li>
      <h6>設定</h6>
      <li><%= link_to "予算", new_budget_path %></li>
      <li><%= link_to "マイページ", mypage_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to "ユーザー情報編集", edit_user_path(current_user) %></li>
      <% else %>
      <% end %>
    </div>
    <div class="col-lg-8">
      <div class="row">
        <div class="col-lg-12"><%= link_to "前の月",balances_path(month:@month.prev_month) %><%= link_to "次の月",balances_path(month:@month.next_month) %></div>
        <div class="col-lg-6">
          <h5 class="text-center"><%= link_to "支出",expense_path %></h5>
          <table class="text-center table tbody-bordered table-hover table-sm">
            <thead class="thead-dark">
              <tr>
                <th>日付</th>
                <th>項目</th>
                <th>金額</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @expenses.each do |expense| %>
                <tr>
                  <td><%= expense.period %></td>
                  <td><%= expense.genre %></td>
                  <td><%= expense.amount.to_s(:delimited, delimiter: ',') %>円</td>
                  <td><%= link_to "詳細", balance_path(expense), class:"btn btn-primary btn-sm" %></td>
                  <td><%= link_to "削除", balance_path(expense), method: :delete, class:"btn btn-primary btn-sm" %></td>
                </tr>
              <% end %>
            </tbody>
            <tbody>
              <tr>
                <th></th>
                <th>支出合計</th>
                <td><%= @expense_sum.to_s(:delimited, delimiter: ',') %>円</td>
                <td></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-lg-6">
          <h5 class="text-center"><%= link_to "収入",income_path %></h5>
          <table class="text-center table tbody-bordered table-hover table-sm">
            <thead class="thead-dark">
              <tr>
                <th>日付</th>
                <th>項目</th>
                <th>金額</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @incomes.each do |income| %>
                <tr>
                  <td><%= income.period %></td>
                  <td><%= income.genre %></td>
                  <td><%= income.amount.to_s(:delimited, delimiter: ',') %>円</td>
                  <td><%= link_to "詳細", balance_path(income), class:"btn btn-primary btn-sm" %></td>
                  <td><%= link_to "削除", balance_path(income), method: :delete, class:"btn btn-primary btn-sm" %></td>
                </tr>
              <% end %>
            </tbody>
            <tbody>
              <tr>
                <th></th>
                <th>収入合計</th>
                <td><%= @income_sum.to_s(:delimited, delimiter: ',') %>円</td>
                <td></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>