    <% if @balance_new.errors.any? %>
      <%= @balance_new.errors.count %>件のエラーが発生しました
      <% @balance_new.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
<div class="container">
  <div class="row">
    <div class="offset-md-2"></div>
    <div class="col-8 border rounded p-3 m-3">
      <h5 class="border-bottom">収支を登録</h5>
      <%= form_with model:@balance_new, url:balances_path, local: true do |f| %>
      <p>
        <%= f.radio_button :balance, 0 %>
        <%= f.label :balance, '収入', value: 0 %>
        <%= f.radio_button :balance, 1 %>
        <%= f.label :balance, '支出', value: 1 %>
      </p>
      <p>
        <%= f.label :period, "日付" %>
        <%= f.date_field :period %>
      </p>
      <p>
        <%= f.label :amount, "金額" %>
        <%= f.number_field :amount %>円
      </p>
      <p>
        <%= f.label :genre, "項目" %>
        <%= f.select :genre, [['食費', 1], ['住居費', 2], ['日用品', 3], ['水道光熱費', 4], ['衣服', 5], ['趣味・娯楽', 6], ['教養・教育', 7], ['通信費', 8], ['健康・医療', 9], ['給料', 10], ['お小遣い', 11], ['賞与', 12] ,['副業', 13] ,['投資', 14] ,['臨時収入', 15] ,['その他', 0]], { include_blank: true} %>
      </p>
      <p>
        <%= f.label :description, "説明" %>
        <%= f.text_field :description, size: "80x2" %>
      </p>
      <p class="text-center"><%= f.submit '新規登録' %></p>
      <% end %>
    </div>
  </div>
</div>