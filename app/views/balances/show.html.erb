<%= @balance.balance %>詳細
<%= form_with model:@balance, url:balance_path, local: true do |f| %>
  <%# @balance.period %>　
  <%= @balance.amount %> >>  <%= f.number_field :amount %>
  <%= @balance.description %> >>  <%= f.text_field :description %>
  <%= f.submit '編集する' %>
<% end %>

<%= link_to "削除", balance_path(@balance), method: :delete, class:"btn btn-primary" %>
<%= link_to "一覧へ戻る", balances_path, class: "btn btn-secondary" %>