<div class="container">
    <div class="row mt-5">
        <div class="col-lg-9">
            <%= form_with model:@blog_new, url:blogs_path, local:true do |f| %>
                <div class="field">
                    <%= f.label :title %><br/>
                    <%= f.text_field :title %>    <%= f.submit '保存' %>
                </div>
                <div class="field">
                    <%= f.label :content %><br/>
                    <%= f.text_area :content, size: "80x20" %>
                </div>
            <% end %>
        </div>
    </div>
</div>