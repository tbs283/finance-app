<div class="container">
    <div class="row">
        <div class="col-lg-10 mt-3">
            <%= form_with model:@blog_new, url:blogs_path, local:true do |f| %>
                <div class="field">
                    <%= f.label :title %><br/>
                    <%= f.text_field :title %>
                    <%= f.submit '投稿',  class:"float-right" %>
                </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10">      
                <div class="field">
                    <%= f.label :content %><br/>
                    <%= f.text_area :content, size: "130x20" %>    
                </div>
            <% end %>
        </div>
    </div>
</div>