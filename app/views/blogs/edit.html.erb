<%= form_with model:@blog, url:blog_path, local:true do |f| %>
    <div class="field">
        <%= f.label :title %><br/>
        <%= f.text_field :title %>    <%= f.submit '保存' %>
    </div>
    
    <div class="field">
        <%= f.label :content %><br/>
        <%= f.text_area :content, size: "150x100" %>    
    </div>
<% end %>