<!DOCTYPE html>
<html>
  <head>
    <title>FinanceApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
         <a class="navbar-brand" href="/"><span>FinanceApp</span></a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                  <li class="fas nav-link text-light"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-secondary" %></li>
                  <li class="fas nav-link text-light"><%= link_to "マイページ", mypage_path, class: "btn btn-secondary" %></li>
                  <li class="fas nav-link text-light"><%= link_to "新規投稿", new_blog_path, class: "btn btn-secondary" %></li>
                  <li class="fas nav-link text-light"><%= link_to "ブログ", blogs_path, class: "btn btn-secondary" %></li>
                <% else %>
                  <li class="fas nav-link text-light"><%= link_to "ブログ", blogs_path, class: "btn btn-secondary" %></li>
                  <li class="fas nav-link text-light"><%= link_to "新規登録", new_user_registration_path, class: "btn btn-secondary" %></li>
                  <li class="fas nav-link text-light"><%= link_to "ログイン", new_user_session_path, class: "btn btn-secondary" %></li>
                <% end %>
           </ul>
         </div>
       </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
